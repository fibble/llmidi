{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended"
  ],
  "env": {
    "node": true,
    "browser": true,
    "es2022": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "vue/multi-word-component-names": "off",
    "vue/max-attributes-per-line": ["error", {
      "singleline": 3,
      "multiline": 1
    }]
  },
  "ignorePatterns": [
    "dist",
    "dist-electron",
    "node_modules",
    "*.config.js"
  ]
}
